loopback_users = none

log.file.level = debug

ssl_options.certfile   = ##CERTS_DIR##/server_localhost_certificate.pem
ssl_options.keyfile    = ##CERTS_DIR##/server_localhost_key.pem
ssl_options.cacertfile = ##CERTS_DIR##/ca_certificate.pem
ssl_options.verify     = verify_peer
ssl_options.fail_if_no_peer_cert  = true

listeners.tcp.default = 5682
listeners.ssl.default = 5681

management.tcp.port = 15682
management.ssl.port = 15681

management.ssl.certfile   = ##CERTS_DIR##/server_localhost_certificate.pem
management.ssl.keyfile    = ##CERTS_DIR##/server_localhost_key.pem
management.ssl.cacertfile = ##CERTS_DIR##/ca_certificate.pem
